<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- ========== Results determine what gets returned to the browser after an action is executed.  ============ -->
    <package name="Login" extends="struts-default">

        <action name="LoginInput">

            <result>/view/login.jsp</result>

        </action>

        <action name="LoginSuccess">

            <result>/view/login_success.jsp</result>

        </action>


        <action name="LoginAction" class="controller.LoginAction">
            <result name="input" type="chain">LoginInput</result>
            <result name="success" type="chain">LoginSuccess</result>
        </action>

    </package>
</struts>
